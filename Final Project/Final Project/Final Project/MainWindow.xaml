<Window x:Class="Final_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="700">
    <StackPanel>
        <ListView Name="lvSongs" Height="150px" Margin="0,0,0,10" MouseDoubleClick="lvSongs_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                    <GridViewColumn Width="100" Header="Musical Genre" DisplayMemberBinding="{Binding Type}"></GridViewColumn>
                    <GridViewColumn Width="100" Header="Composed by" DisplayMemberBinding="{Binding Composed_by}"></GridViewColumn>
                    <GridViewColumn Width="100" Header="Year" DisplayMemberBinding="{Binding Year}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="SayLyrics_Button_Click">Say Lyrics</Button>
    </StackPanel>
</Window>
